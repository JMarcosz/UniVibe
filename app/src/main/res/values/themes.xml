<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.UniVibe" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Hace que la barra de estado sea transparente -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Hace que la barra de navegación sea transparente -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Asegura que la barra de navegación tenga contraste oscuro (solo API 27+) -->
        <!-- Habilita el dibujado detrás de las barras del sistema -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>